<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/fon2"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/asosiy"
        />

    <EditText
        android:id="@+id/et_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_design"
        android:hint="Telefon raqamni kiriting"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:textColor="@color/fon"
        android:textColorHint="@color/fon"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/et_parol"
        android:layout_below="@+id/et_login"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:hint="Parolni kiriting"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/fon"
        android:textSize="20dp"
        android:textColorHint="@color/fon"
        android:layout_height="65dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_design"/>


    <CheckBox
        android:id="@+id/checkbox"
        style="@style/Material.Drawable.CheckBox"
        android:text="Eslab qol"
        android:textColor="@color/fon"
        app:cbd_strokeColor="@color/fon"
        android:gravity="center_vertical"
        android:layout_below="@+id/et_parol"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/forget"
        android:layout_below="@+id/et_parol"
        android:layout_marginTop="15dp"
       android:layout_alignParentRight="true"
        android:text="Parolni Unutdingizmi"
        android:textColor="@color/fon"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Log In"
        android:layout_below="@+id/checkbox"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttons"
        />


    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Registratsiya"
        android:textSize="20dp"

        android:background="@drawable/buttons"

        />


</RelativeLayout>